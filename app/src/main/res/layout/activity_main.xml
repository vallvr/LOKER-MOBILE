<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/greenLight"
    android:padding="16dp"
    tools:context=".MainActivity2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <!-- Ikon atau Logo -->
        <ImageView
            android:id="@+id/logo"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/cover"
            android:layout_marginBottom="24dp" />

        <!-- Judul -->
        <TextView
            android:id="@+id/tvWelcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selamat Datang"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_marginBottom="8dp"
            android:gravity="center" />

        <!-- Subjudul -->
        <TextView
            android:id="@+id/tvSubTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Siapa Kamu??"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:layout_marginBottom="24dp"
            android:gravity="center" />

        <!-- Tombol Untuk Admin -->
        <Button
            android:id="@+id/btnAdmin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dashboard Admin"
            android:textSize="18sp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/btn_admin_background"
            android:textColor="@android:color/white"
            android:padding="14dp"
            android:elevation="6dp"
            android:drawableLeft="@drawable/ic_admin"
            android:drawablePadding="10dp" />

        <!-- Tombol Untuk Pelamar -->
        <Button
            android:id="@+id/btnPelamar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Jelajahi Pekerjaan"
            android:textSize="18sp"
            android:background="@drawable/btn_pelamar_background"
            android:textColor="@android:color/white"
            android:padding="14dp"
            android:elevation="6dp"
            android:drawableLeft="@drawable/ic_pekerja"
            android:drawablePadding="10dp" />

        <!-- Footer -->
        <TextView
            android:id="@+id/tvFooter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Powered by Lowongan Kerja"
            android:textSize="12sp"
            android:textColor="@android:color/white"
            android:layout_marginTop="24dp"
            android:gravity="center" />

    </LinearLayout>
</ScrollView>
