<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green"
    android:padding="16dp"
    tools:context=".MainActivity2">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:gravity="center">

    <!-- Ikon atau Logo -->
    <ImageView
        android:id="@+id/logo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/cover"
        android:layout_marginBottom="24dp" />

    <!-- Judul -->
    <TextView
        android:id="@+id/tvWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selamat Datang"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:layout_marginBottom="8dp"
        android:gravity="center" />

    <!-- Subjudul -->
    <TextView
        android:id="@+id/tvSubTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pilih aksi yang ingin Anda lakukan"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:layout_marginBottom="24dp"
        android:gravity="center" />

    <!-- Tombol Ke Upload Pekerjaan -->
    <Button
        android:id="@+id/btnKeUpload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Upload Pekerjaan"
        android:textSize="18sp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@android:color/white"
        android:textColor="@color/green"
        android:padding="14dp"
        android:elevation="6dp"
        android:drawableLeft="@drawable/ic_add"
        android:drawablePadding="10dp" />

    <!-- Tombol Lihat Semua Pekerjaan -->
    <Button
        android:id="@+id/btnSemua"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lihat Semua Pekerjaan"
        android:textSize="18sp"
        android:backgroundTint="@android:color/white"
        android:textColor="@color/green"
        android:padding="14dp"
        android:elevation="6dp"
        android:drawableLeft="@drawable/ic_job"
        android:drawablePadding="10dp" />

    <!-- Tombol Lihat Data Pelamar -->
    <Button
        android:id="@+id/btnDataPelamar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lihat Data Pelamar"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@android:color/white"
        android:textColor="@color/green"
        android:padding="14dp"
        android:elevation="6dp"
        android:drawableLeft="@drawable/ic_person"
        android:drawablePadding="10dp" />

    <!-- Footer -->
    <TextView
        android:id="@+id/tvFooter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Keluar"
        android:textSize="12sp"
        android:textColor="@android:color/white"
        android:layout_marginTop="24dp"
        android:gravity="center" />

  </LinearLayout>
</ScrollView>
